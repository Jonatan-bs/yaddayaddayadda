.Yadda    
        .profilePicYadda
          a(href=`/profile/${yadda.user._id}`)
            if yadda.user.image
              img( alt='' style=`background-image:url(https://res.cloudinary.com/kuko/w_80/${yadda.user.image})`)
            else
              img(style="background-image:url('/../images/profile.jpg')" alt='')

        .yaddaBox
          .yaddaUser
            a(href=`/profile/${yadda.user._id}`)
              h2
                = yadda.user.firstname + " " + yadda.user.lastname
            h3 
              = "@" + yadda.user.username
          .yaddaText
            p
              = yadda.text
          if yadda.image
            img.yaddaImg(src=`https://res.cloudinary.com/kuko/w_600/${yadda.image}` alt='')

          each tag in yadda.tags
            .yaddaTags
              a(href='/search/tag/' + tag)
                span 
                  = "#" + tag

          .yaddaInfo
            .likesandreplies
              div
                if yadda.likes.includes(user._id)
                  img.like(src='/../images/heart.png')
                else
                  img.like(src='/../images/heart2.png')
            
                h3.like
                  = "Likes (" + yadda.likes.length+ ")"
              div
                img(src='/../images/reply.png')
                h3 Replies (2)
              input(type="hidden" value=yadda._id)
            .yaddaDate
              h3 
                = yadda.dateFormatted
            .follow
                if user.following.includes(yadda.user._id)
                  form(action=`/follow/${yadda.user._id}` method='POST')
                    button unfollow
                else
                  form(action=`/follow/${yadda.user._id}` method='POST')
                    button follow


